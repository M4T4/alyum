<p style="color: green"><%= notice %></p>

<div class="card mb-3">
  <div class="card-header">
    Filtros
  </div>
  <div class="card-body">
		<%= search_form_for @q do |f| %>
			<%= f.label "Tipo de documento" %>
			<%= f.select(:document_type_eq, options_for_select(BibliographicFile.document_types.map {|k, v| [k.humanize.capitalize, v]}, f.object.document_type_eq), { include_blank: true }, {class: "form-select" }) %>
					
			<%= f.label "n1" %>		
			<%= f.select(:n1_eq, options_for_select(BibliographicFile.n1s.map {|k, v| [k.humanize.capitalize, v]}, f.object.n1_eq), { include_blank: true }, {class: "form-select" }) %>

			<%= f.label "Lenguaje", class: "mt-3 mb-1" %>
			<div class="mb-3">
			<% languages.each do |lang| %>
				<%= f.check_box :language_y_in, {multiple: true, class: "form-check-input"}, lang, nil %>
				<%= lang %>
			<% end %>
			</div>
			

			<%= f.label "Busqueda" %>
			<%= f.text_field :title_or_b_data_cont, class: 'form-control' %>
			<%= f.submit "Buscar", class: 'btn btn-primary mt-3 mb-3' %>
			<%= link_to "Limpiar", request.path, class: "btn btn-secondary mt-3 mb-3" %>
		<% end %>
  </div>
</div>

<% if device == "desktop" %>
  <%= render partial: 'desktop' %>

<% else %>
	<%= render partial: 'mobile' %>
<% end %>


<%== pagy_bootstrap_nav(@pagy) %>


<div class="d-grid gap-2">
	<%= link_to "Crear un nuevo archivo bibliografico", new_bibliographic_file_path, class: "btn btn-outline-dark mb-3" %>
</div>