<p style="color: green"><%= notice %></p>

<div class="card mb-3">
  <div class="card-header", style="background-color: #f68920;">
    Filtros
  </div>
  <div class="card-body">
		<%= search_form_for @q, url: url do |f| %>					
			<%= f.label "n1" %>
			<%= f.select :n1_matches, n1s, { include_blank: true }, {class: "form-select" } %>
			
			<%= f.label "Lenguaje", class: "mt-3 mb-1" %>
			<div class="mb-3">
			<% languages.each do |lang| %>
				<%= lang %>
				<%= f.check_box :language_y_in, {multiple: true, class: "form-check-input me-4", style: "background-color: #f68920;"}, lang, nil %>
			<% end %>
			</div>
			

			<%= f.label "Busqueda" %>
			<%= f.text_field :title_or_b_data_cont, class: 'form-control' %>
			<%= f.submit "Buscar", class: 'btn btn-primary mt-3 mb-3' %>
			<%= link_to "Limpiar", request.path, class: "btn btn-light mt-3 mb-3" %>
		<% end %>
		<p>Hay <%= @results %> resultados </p>
  </div>
</div>

<% if device == "desktop" %>
  <%= render partial: 'shared/desktop' %>

<% else %>
	<%= render partial: 'shared/mobile' %>
<% end %>


<%== pagy_bootstrap_nav(@pagy) %>