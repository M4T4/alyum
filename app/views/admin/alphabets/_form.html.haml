.py-3
  = form_with(model: @alphabet, url: url) do |form|
    .error_explanation
      - if @alphabet.errors.any?
        %div{:style => "color: red"}
          %h2
            = pluralize(@alphabet.errors.count, "error")
            prohibited this lexico_file from being saved:
          %ul
            - @alphabet.errors.each do |error|
              %li= error.full_message
    .row.g-3.mb-3
      = form.label "Nombre"
      = form.text_field :name, class: "form-control"
    .row.g-3.mb-3
      = form.label "Texto"
      = form.text_area :text, class: "form-control", rows: "6"

    .modal-footer
      %button.btn.btn-secondary{"data-bs-dismiss" => "modal", :type => "button"} Cerrar
      = form.submit "Guardar", class: "btn btn-primary"

