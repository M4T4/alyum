<%= form_with model: @researcher, url: url do |form| %>

	<%= form.collection_select :user_id, User.all, :id, :name_with_initial, {}, {:class => "form-select"} %>


	<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
    <%= form.submit "Agregar usauario como investigador", class: "btn btn-primary" %>
  </div>

<% end %>
