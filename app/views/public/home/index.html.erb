  </div>

	<div class="row text-center py-5">
		<div class="col">
			<%= link_to image_tag("public/drawings/cucapa.svg"), search_engine_path(q: {language_y_in: 'Cocopa'}), class: "fa fa-plus-square" %>
		</div>
		<div class="col">
			<%= link_to image_tag("public/drawings/paipai.svg"), search_engine_path(q: {language_y_in: 'Pa ipai'}), class: "fa fa-plus-square" %>
		</div>
		<div class="col">
			<%= link_to image_tag("public/drawings/kiliwa.svg"), search_engine_path(q: {language_y_in: 'Kiliwa'}), class: "fa fa-plus-square" %>
		</div>
		<div class="col">
			<%= link_to image_tag("public/drawings/cochimi.svg"), search_engine_path(q: {language_y_in: 'Cochimi'}), class: "fa fa-plus-square" %>
		</div>
		<div class="col">
			<%= link_to image_tag("public/drawings/koahl.svg"), search_engine_path(q: {language_y_in: 'Cocopa'}), class: "fa fa-plus-square" %>
