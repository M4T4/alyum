<div class="card my-5 w-100 p-3">
	<div class="row g-0">
		<div class="col-md-3 py-5 justify-content-center d-flex">
			<%= cl_image_tag(@image_url, class: "img-fluid", :width=>400, :height=>500, :gravity=>"auto", :crop=>"fill") %>
		</div>

		<div class="col-auto d-lg-flex p-3 d-none d-lg-block h-auto pe-xxl-5">
			<div class="vr" style="width: 2px"></div>
		</div>

		<div class="col-md-8 py-5">
			<div class="card-body">
				<h5 class="card-title display-4"><%= @name %></h5>
				<% if device == "desktop" %>
					<div class="card-text fs-4 text-secondary"><%= "#{@language.capitalize} | #{@date_creation.strftime("%Y-%m-%d")}" %></div>
					<% if !@level.nil?%>
						<div class="card-text fs-4"><strong>Nivel de lengua:</strong> <%= @level %></div>
					<% end %>
					<div class="card-text fs-4"><%= markdown(@description) %></div>
				<% else %>
					<div class="card-text fs-4"><strong>Lengua principal:</strong> <%= @language %></div>
					<% if !@level.nil?%>
						<div class="card-text fs-4"><strong>Nivel de lengua:</strong> <%= @level %></div>
					<% end %>
					<a class="h3" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
						Ver descripción académica
					</a>
					<div class="collapse" id="collapseExample">
						<div class="card card-body fs-4"><%= markdown(@description) %></div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>